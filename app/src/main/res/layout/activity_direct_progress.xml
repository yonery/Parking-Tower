<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/progress_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff">

        <com.example.sgen.parkingtower.GitView2
            android:id="@+id/progress_gif_view2"
            android:layout_marginTop="180dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:visibility="visible"
            android:layout_gravity="center_horizontal" />
        <com.example.sgen.parkingtower.GitView3
            android:id="@+id/progress_gif_view3"
            android:layout_marginTop="180dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            android:layout_gravity="center_horizontal" />
        <com.example.sgen.parkingtower.GitView4
            android:id="@+id/progress_gif_view4"
            android:layout_marginTop="180dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:id="@+id/progresstxt1"
            android:layout_marginTop="15dp"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:textColor="#fff"
            android:text="현재 10대가 출차 대기중입니다."
            android:layout_width="match_parent"
            android:textSize="7pt"
            android:layout_height="27dp"
            android:visibility="visible"/>
        <TextView
            android:id="@+id/progresstxt2"
            android:gravity="center_horizontal"
            android:textColor="#fff"
            android:textSize="6pt"
            android:text="출차시 10분정도 소요"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:visibility="visible"/>

        <Button
            android:layout_marginTop="120dp"
            android:id="@+id/backprogressbtn"
            android:background="@drawable/guide_005_button"
            android:layout_width="230dp"
            android:layout_height="43dp"
            android:layout_gravity="center"
            />
    </LinearLayout>

</LinearLayout>