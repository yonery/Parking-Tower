<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="330dp"
                android:layout_height="240dp"
                android:src="@drawable/guide_002_dash_board_n"
                android:layout_gravity="center_horizontal"/>

            <Button
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="121dp"
                android:background="@drawable/guide_002_menu_01_n"
                />
            <Button
                android:layout_marginTop="2dp"
                android:id="@+id/parking"
                android:layout_width="match_parent"
                android:layout_height="121dp"
                android:background="@drawable/guide_002_menu_02_n"
                />
            <Button
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="121dp"
                android:background="@drawable/guide_002_menu_03_n" />
            <Button
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="121dp"
                android:background="@drawable/guide_002_menu_04_n"
                />

        </LinearLayout>
    </ScrollView>

</LinearLayout>