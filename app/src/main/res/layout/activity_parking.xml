<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:src="@drawable/guide_003_title_02_n"
                >
            </ImageView>
            <LinearLayout
                android:id="@+id/dashboard"
                android:orientation="vertical"
                android:visibility="visible"
                android:layout_marginTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="#fff">

                <WebView
                    android:id="@+id/parkwebview"
                    android:layout_marginTop="79dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_centerHorizontal="true"
                    android:layout_width="340dp"
                    android:layout_height="40dp"
                    android:visibility="visible"></WebView>

                <com.example.sgen.parkingtower.GitView2
                    android:id="@+id/gif_view2"
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:visibility="gone"
                    android:layout_gravity="center_horizontal" />
                <com.example.sgen.parkingtower.GitView3
                    android:id="@+id/gif_view3"
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:visibility="gone"
                    android:layout_gravity="center_horizontal" />
                <com.example.sgen.parkingtower.GitView4
                    android:id="@+id/gif_view4"
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:visibility="gone"
                    android:layout_gravity="center_horizontal" />
                <TextView
                    android:id="@+id/parktxt1"
                    android:layout_marginTop="15dp"
                    android:gravity="center_horizontal"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:text="현재 2대가 출차 대기중입니다."
                    android:layout_width="match_parent"
                    android:textSize="7pt"
                    android:layout_height="27dp"
                    android:visibility="visible"/>
                <TextView
                    android:id="@+id/parktxt2"
                    android:gravity="center_horizontal"
                    android:textColor="#fff"
                    android:textSize="6pt"
                    android:text="출차시 04분정도 소요"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:visibility="visible"/>

            </LinearLayout>

            <Button
                android:background="@drawable/guide_003_menu_01_n"
                android:layout_marginTop="3dp"
                android:id="@+id/directparkingbtn"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="2dp" />

            <Button
                android:background="@drawable/guide_003_menu_02_n"
                android:id="@+id/parkingstatusbtn"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="2dp">
            </Button>
            <Button
                android:background="@drawable/guide_003_menu_03_n"
                android:id="@+id/NFCtaggingbtn"
                android:layout_width="match_parent"
                android:layout_height="150dp">
            </Button>

        </LinearLayout>
    </ScrollView>
</LinearLayout>